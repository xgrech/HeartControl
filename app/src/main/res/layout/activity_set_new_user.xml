<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetNewUser">

    <TextView
        android:id="@+id/set_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Nastavenie profilu"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pre nastavenie profilu odpovedzte prosím na pár otázok:"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_title_image" />

    <ImageView
        android:id="@+id/set_up_title_image"
        android:layout_width="107dp"
        android:layout_height="108dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_title"
        app:srcCompat="@drawable/settings_icon"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/set_up_question"
        android:layout_width="396dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:text="Ste pripravený?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/set_up_ready_button"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:text="Ready?"
        android:textColor="#C33406"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question" />

    <Spinner
        android:id="@+id/set_up_gender_spinner"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/set_up_smoking_spinner"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/set_up_work_spinner"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="Visible" />

    <Spinner
        android:id="@+id/set_up_patology_spinner"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/set_up_sport_spinner"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginTop="228dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/set_up_question_image"
        android:layout_width="159dp"
        android:layout_height="171dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        app:srcCompat="@drawable/settings_icon"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/set_up_age_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:hint="Set a number"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_up_question"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>